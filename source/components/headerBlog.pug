include ./_mixins

section.header.section-header
    .header-container
        header.section-header-top
            +socialIcons('social_main', [{link:'http://vk.com',img: 'vk'},{link:'http://vk.com',img: 'github'},{link:'http://vk.com',img: 'in'}])
            .hamburger-menu
                .hamburger-icon
                    input(class='visuallyHidden hamburger',type="checkbox",name='hamburger')
                    .hamburger-check
                        +svgIcon('hamburger-menu__img','./images/sprite.svg','hamburger')
        .section-header-main
            .describe-image_other.describe-image
                img.describe-image__photo(src=("./images/photo.jpg"), alt="")
            h2.title-underline.title-underline_blog= 'Блог'
            span.blog-text= 'Статьи, которые я написал'
            .about-title_blog.about-title
                +svgIcon('about-title__img','./images/sprite.svg','blog_header')
            .arrow-content
                a(href="").arrow
                    +svgIcon('arrow__img','./images/sprite.svg','arrow_down')