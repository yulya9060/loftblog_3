mixin header(className)
    header(class=`header ${className}`)
        if className = 'welcome__header'
            include ./roundHref

mixin footer(className)
    footer(class=`footer ${className}`)
        if className = 'welcome__footer'
            h2 Подвал
            
mixin socialIcons(className,items)
    div(class=`${className}`)
        ul(class=`${className}__list`)
            each item in items
                li(class=`${className}__item`)
                    a(class=`${className}__link` href=`${item.link}`)
                        svg(class=`${className}__img`)
                            use(xlink:href=require("../../images/sprite.svg")+`${item.img}`)